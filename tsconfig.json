{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "esnext",
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "noEmit": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
